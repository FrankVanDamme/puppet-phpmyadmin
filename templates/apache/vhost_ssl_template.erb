# Managed by Puppet

NameVirtualHost <%= vhost_name %>:<%= port %>
<VirtualHost <%= vhost_name %>:<%= port %>>
  ServerName <%= srvname %>

  #Enable SSL Support in vhost
  SSLEngine on
  SSLCipherSuite ALL:-ADH:+HIGH:+MEDIUM:-LOW:-SSLv2:-EXP
  SSLCertificateFile <%= scope.lookupvar('phpmyadmin::params::apache_config_dir') %>/phpmyadmin_<%= @virtul_host %>.crt
  SSLCertificateKeyFile <%= scope.lookupvar('phpmyadmin::params::apache_config_dir') %>/phpmyadmin_<%= @virtul_host %>.key

<% if serveradmin %>
  ServerAdmin <%= serveradmin %>
<% end %>
<% if serveraliases.is_a? Array -%>
<% serveraliases.each do |name| -%><%= "  ServerAlias #{name}\n" %><% end -%>
<% elsif serveraliases != '' -%>
<%= "  ServerAlias #{serveraliases}" %>
<% end -%>
  DocumentRoot <%= docroot %>
  <Directory <%= docroot %>>
    Options <%= options %>
    AllowOverride <%= Array(override).join(' ') %>
    Order allow,deny
    allow from all
  </Directory>
  ErrorLog <%= logroot %>/<%= name %>_error.log
  LogLevel warn
<% if access_log -%>
  CustomLog <%= logroot %>/<%= name %>_access.log combined
<% end -%>
  ServerSignature Off

  #Include the phpMyAdmin config in this vhost
  Include "<%= scope.lookupvar('phpmyadmin::params::apache_default_config') %>"

</VirtualHost>
